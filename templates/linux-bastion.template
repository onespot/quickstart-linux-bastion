            "Fn::Not": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "AssumeRole"
                        },
                        ""
                    ]
                }
            ]
        },
        "UseLocalIAM": {
            "Fn::Equals": [
                {
                    "Ref": "AssumeRole"
                },
                ""
            ]
        },
        "HasKeyName": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "KeyPairName"
                        },
                        ""
                    ]
                }
            ]
        },
        "2BastionCondition": {
            "Fn::Or": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "NumBastionHosts"
                        },
                        "2"
                    ]
                },
                {
                    "Condition": "3BastionCondition"
                },
                {
                    "Condition": "4BastionCondition"
                }
            ]
        },
